<h2>Create deck from URL</h2>
<% form_tag :action => :create do %>
DeckCheck URL <%= text_field_tag :url, @url %>
<%= submit_tag 'Create from URL' %>
<% end -%>

<br/>

<h2>Create deck from card list</h2>
<p><em>one line for each cards</em></p>

<% form_tag :action => :create  do  -%>
<%= label_for(:name) -%>
<%= text_field_tag :name, "Hand-made deck" %>
<br/>
<%= text_area_tag "cards", @cards, :cols => 60, :rows => 20 %>
<br/>
<%= submit_tag 'Create from cards list' %>
<% end -%>

